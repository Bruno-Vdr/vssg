/**
 *   VSSG pushs_list_style.tmpl a template for style of pushs_list pages, to be customized.
 */
.float{
	position:fixed;
	width:40px;
	height:40px;
	bottom:20px;
	right:20px;
	background-color:#666;
	color:#FFF;
	border-radius:2px;
	text-align:center;
	box-shadow: 2px 2px 3px #999;
}

.my-float {
    display:flex;
    align-items:center;
    justify-content:center;
}


body {
    font-family: "verdana", "garamond", serif, monospace;
	background-color: white;
	font-size: 16px;
}

p {
    max-width: 900px;
}

h1 {
    font-size: 2.0rem;
	color: black;
	text-align: center;
}

h2 {
    font-size: 1.5rem;
	color: black;
	text-align: left;
}

h3 {
    font-size: 1.17rem;
	color: black;
	text-align: left;
}

h4 {
    font-size: 1.0rem;
	color: black;
	text-align: left;
}

h5 {
    font-size: 0.83rem;
	color: black;
	text-align: left;
}

h6 {
    font-size: 0.67rem;
	color: #303030;;
	text-align: center;
    white-space: nowrap;
    font-weight: normal;
}

hr {
	border: 0;
	height: 1px;
    max-width: 900px;
	background-image: linear-gradient(to right, transparent, #808080, transparent);
}

div {
	color: #202020;
	background-color: white;
	width: 100%;
	height: 100%;
	max-width: 900px;
	margin: auto;
}



blockquote {
  background: #B0B0B0;
  border-left: 5px solid #000000;
  margin: 1.5em 10px;
  padding: 0.5em 10px;
  quotes: "\201C""\201D""\2018""\2019";
}
blockquote:before {
  color: #333;
  content: open-quote;
  font-size: 2em;
  line-height: 0.1em;
  margin-right: 0.25em;
  vertical-align: -0.4em;
}
blockquote:after {
  color: #333;
  content: close-quote;
  font-size: 2em;
  line-height: 0.1em;
  margin-left: 0.25em;
  vertical-align: -0.4em;
}

blockquote p {
  width=100%;
  max-width: 900px;
  display: block;
}

img {
  width: 100%;
  height: auto;
  border-radius: 4px;
  display: block;
  max-width: max-content;
  max-height:max-content;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 2px;
  margin-top: 2px;
}

figcaption {
  color: #303030;
  font-size: 0.5rem;
  font-weight: light;
  padding: 0px;
  text-align: center;
}

/* unvisited link */
a:link {
  color: #603030;
  text-decoration:none;
}

/* visited link */
a:visited {
  color: #603030;
  text-decoration:none;
}

/* mouse over link */
a:hover {
  color: #eb9e44;
  text-decoration:none;
  background:#652907;
}

/* selected link */
a:active {
  color: blue;
  text-decoration:none;
}

button {
  background-color: transparent;
  border: none;
  outline:none;
  color:  #a8a22b;
}

button:hover {
  background-color: white;
  border: none;
  outline:none;
  color:  #787200;
}

ul {
    list-style-type: disc;
}

li {
    width: 100%;
    max-width: 900px;
    white-space: nowrap;
}





